<script
  src="https://code.jquery.com/jquery-3.5.1.js"
  integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
  crossorigin="anonymous"></script>
  

<%= __('username') %> <input type="text" id="firstname"/> <br>

<%= __('password') %> <input type="text" id="password"/> <br>

<button id="submitbutton"> L<%= __('login') %> </button>





<script>

$( "#submitbutton" ).click(function(event) {
  
  event.preventDefault();
  
  // grab the values
  var userFirstname = $('#firstname').val();
  var userPassword = $('#password').val();
  

  
  
  // send the data to the server-side
  $.post( "/login", { userfirstname: userFirstname, userpassword: userPassword })
  .done(function( data ) {
      
      
    alert( "Data Loaded: " + data );
    
    if(data.includes("valid")){
            window.location="/dashboard";
    } else {
        
        alert("username or password not valid");
    }
  });
  
  
  
  
});

</script>